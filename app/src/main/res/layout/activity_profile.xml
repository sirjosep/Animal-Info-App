<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass"
    tools:context=".ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_navbar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kotak_hijau_layout">
            <ImageButton
                android:id="@+id/back_home_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/logo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_below="@id/layout_navbar_profile"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/profile"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/profile_nama"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/foto_profile"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/kotak_nama"
                android:elevation="12dp"
                android:padding="20dp"
                android:text="@string/nama"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/profile_email"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_nama"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/kotak_nama"
                android:elevation="12dp"
                android:padding="15dp"
                android:text="@string/email"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>